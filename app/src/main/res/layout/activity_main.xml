<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codester.maris.loc.MainActivity">


    <EditText
        android:id="@+id/dest_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="latitude"
        android:text="53.3385406"/>

    <EditText
        android:id="@+id/dest_lon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dest_latitude"
        android:hint="longitude"
        android:text="-6.2676777"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dest_lon"
        android:text="send"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"/>

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:layout_below="@id/tv2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/breakLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-----------------------------------------------------------------------------"
        android:layout_below="@id/btnCheck"/>

    <ListView
        android:id="@+id/list1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/breakLine"></ListView>

    <ListView
        android:id="@+id/list2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/breakLine"
        android:layout_toRightOf="@id/list1"></ListView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list1"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
